<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:layout_marginEnd="6dp"
    android:layout_marginStart="6dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/thumbnail"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                fresco:actualImageScaleType="focusCrop"
                fresco:fadeDuration="100"
                fresco:failureImage="@android:drawable/stat_notify_error"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@drawable/img_photo_gallery_placeholder"
                fresco:placeholderImageScaleType="centerCrop" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_favorite_border" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="РоссийскийДедМорозеснойсказке"
                android:textColor="@color/black"
                android:textSize="@dimen/item_news_title_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="26dp"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:lines="3"
                android:text="Сегодня барнаульский зоопарк посетил необычный сказочный гость. Главный Дед Мороз страны приехал в Лесную сказку, чтобы встретиться со своим алтайским тёзкой. Встреча двух Морозов получилась очень тёплой. Дедушки обменялись подарками, поводили хороводы с детьми. Алтайский Дед Мороз пригласил дорогого гостя в свою резиденцию, где показал коллекцию посохов и угостил чаем с мёдом. Не остались без внимания и пушистых жителей Барнаульского зоопарка. Дедушки посетили Барнаульский зоопарк, где покормили мёдом бурого медвежонка Осипа, познакомились с любознательным енотом Асей и маленькой львицей Аей.
И дети, и взрослые, пришедшие в Лесную сказкуна встречу с главным Дедом морозом страны, были несказанно рады! "
                android:textColor="@color/black"
                android:textSize="@dimen/item_news_description_text_size" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:background="@color/yellow"
        android:padding="4dp"
        android:text="30.11.2016"
        android:textColor="@color/white"
        android:textSize="@dimen/item_news_time_text_size" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="12dp"
        android:src="@drawable/ic_chevron_right" />
</android.support.v7.widget.CardView>